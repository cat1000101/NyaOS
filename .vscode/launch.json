{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to QEMU",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceFolder}/zig-out/extra/kernel.elf",
            "preRunCommands": [
                "target module add ${workspaceFolder}/zig-out/extra/program.elf",
            ],
            "processCreateCommands": [
                "gdb-remote localhost:1234",
                "b kmain",
                "c"
            ],
            "preLaunchTask": "debug-qemu",
            "exitCommands": [
                "process kill"
            ]
        }
    ]
}